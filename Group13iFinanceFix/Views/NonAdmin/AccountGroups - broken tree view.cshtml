@model IEnumerable<Group13iFinanceFix.Models.GroupTable>

@{
    ViewBag.Title = "Account Groups";
}

@helper RenderGroupTree(IEnumerable<Group13iFinanceFix.Models.GroupTable> groups, string parentId)
{
    var childGroups = groups.Where(g => g.parent == parentId).ToList();
    <ul>
        @foreach (var group in childGroups)
        {
            <li>
                <strong> @group.groupName </strong>
                <span> -Parent: @(group.parent != null ? group.parent.ToString() : "None") </span>
                <span> -Element: @(ViewBag.elementNames != null && ViewBag.elementNames.ContainsKey(group.ID) ? ViewBag.elementNames[group.ID] : "Unknown") </span>
                <span>
                    @using (Html.BeginForm("DeleteAccountGroup", "NonAdmin", FormMethod.Post, new { @class = "d-inline" }))
                    {
                        @Html.Hidden("id", group.ID)
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this group?');">Delete</button>
                    }
                </span>
                @RenderGroupTree(groups, group.ID)
            </li>
        }
    </ul>
}

<h2>@ViewBag.Title</h2>

<div class="mb-3">
    <a class="btn btn-secondary" href="/NonAdmin/NonAdminDashboard">&larr; Back to Dashboard</a>
</div>

<div>
    @RenderGroupTree(Model, null)
</div>
<br />
<div class="mb-3">
    <a class="btn btn-primary" href="/NonAdmin/CreateAccountGroup">Create New Account Group</a>
</div>
