
@{
    ViewBag.Title = "Profit and Loss";
}

<h2>Profit and Loss</h2>
<hr class="my-4">

<div class="mb-3">
    <a class="btn back-button" href="/NonAdmin/NonAdminDashboard">&larr; Back to Dashboard</a>
</div>

<!-- Show Income -->
<h4>Income</h4>
<table class="table">
    <tr><th>Account</th><th>Amount</th></tr>
    @foreach (var item in ViewBag.Income)
    {
        <tr><td>@item.AccountName</td><td>$@item.Amount</td></tr>
    }
</table>

<!-- Show Expenses -->
<h4>Expenses</h4>
<table class="table">
    <tr><th>Account</th><th>Amount</th></tr>
    @foreach (var item in ViewBag.Expenses)
    {
        <tr><td>@item.AccountName</td><td>$@item.Amount</td></tr>
    }
</table>

<!-- Net Profit ) -->
<h4>Net Profit</h4>
<p>
    $@(ViewBag.TotalIncome - ViewBag.TotalExpenses)
</p>
