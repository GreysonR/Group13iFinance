@model Group13iFinanceFix.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<h2 class="text-center mt-4">Admin Login</h2>

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        @using (Html.BeginForm())
        {
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.Username)
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control" }) @*Label for the username*@
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" }) @*Label for the password*@
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-primary w-100">Login</button> @*Button*@

            @* Error message display *@
            if (ViewBag.Message != null)
            {
                <div class="text-danger mt-3">@ViewBag.Message</div>
            }

        }
    </div>
</div>

